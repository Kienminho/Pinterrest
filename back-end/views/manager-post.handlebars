<!-- Content wrapper -->
<div class="content-wrapper">
    <!-- Content -->

    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Admin /</span> Quản lý bài đăng</h4>
        <button style="margin-bottom:8px" type="button" class="btn btn-primary" data-bs-toggle="modal"
            data-bs-target="#create-post-modal">Tạo bài đăng</button>
        <!-- Basic Bootstrap Table -->
        <div class="card">
            <div>
                <h5 class="card-header">Bài đăng</h5>
                <div style="margin-right: 12px; margin-bottom:12px" class="row justify-content-end">
                    <div class="col-auto">
                        <div class="input-group input-group-merge">
                            <input type="search" class="search form-control" placeholder="Search..."
                                aria-label="Search..." aria-describedby="basic-addon-search31" />
                            <span class="input-group-text" id="basic-addon-search31"><i class="bx bx-search"></i></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tiêu đề</th>
                            <th>Mô tả</th>
                            <th>Hình ảnh</th>
                            <th>Tổng bình luận</th>
                            <th>Cho phép bình luận</th>
                            <th>Người đăng</th>
                            <th>Ngày đăng</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody class="tbody table-border-bottom-0"></tbody>
                </table>
            </div>
        </div>
        <div class="loader-container d-none d-flex justify-content-center align-items-center">
            <div class="loader mt-5"></div>
        </div>
    </div>

    <!-- / Content -->
</div>

<div class="content-backdrop fade"></div>

<div class="modal fade" id="create-post-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="add-product-modal-label">Tạo bài đăng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form-create-post" enctype="application/json">
                    <div class="mb-3">
                        <label for="category-name">Tiêu đề</label>
                        <input class="form-control" type="text" placeholder="Nhập tên danh mục" id="post-name"
                            name="Title">
                    </div>

                    <div class="mb-3">
                        <label for="description">Nội dung</label>
                        <input class="form-control" type="text" placeholder="Nhập mô tả" id="desc" name="Description">
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="is-comment" name="IsComment">
                            <label class="form-check
                                label" for="flexSwitchCheckDefault">Cho phép bình luận</label>
                        </div>
                    </div>
                    {{!-- //input image using file-upload-with-preview --}}
                    <div class="mb-3">
                        <div class="dropzone" id="my-drop-zone">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Huỷ </button>
                <button type="button" class="btn-add-post btn btn-primary pe-auto"> Tạo
                </button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="update-post-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="add-product-modal-label">Cập nhật bài đăng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="form-create-post" enctype="application/json">
                    <div class="mb-3">
                        <input class="d-none" type="text" id="id" name="Id">
                        <label for="category-name">Tiêu đề</label>
                        <input class="form-control" type="text" placeholder="Nhập tên danh mục" id="update-post-name"
                            name="Title">
                    </div>

                    <div class="mb-3">
                        <label for="description">Nội dung</label>
                        <input class="form-control" type="text" placeholder="Nhập mô tả" id="update-desc"
                            name="Description">
                    </div>
                    <div class="mb-3">
                        <div class="form-check form-switch">
                            <input class="form-check-input" type="checkbox" id="update-is-comment" name="IsComment">
                            <label class="form-check
                                label" for="flexSwitchCheckDefault">Cho phép bình luận</label>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal"> Huỷ </button>
                <button type="button" class="btn-update-post btn btn-primary pe-auto"> Tạo
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete-->
<div class="modal fade" id="delete-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Hoạt động</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Bạn có muốn thực hiện hành động này không?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleted()">Xác nhận</button>
            </div>
        </div>
    </div>
</div>

<!-- Toast message --->
<div class="position-fixed bottom-0 end-0 p-3" style="z-index: 11">
    <div id="liveToast" class="bg-success text-white toast hide" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                aria-label="Close"></button>
        </div>
    </div>
</div>
<script type="module" src="../js/manager-post.js"></script>